doctype html
html
  head
    title= 'Projeto do Caio'
    meta(charset='utf-8')
    link(rel='stylesheet', href='/css/style.css')
    link(rel='stylesheet' href='/css/bootstrap.min.css')
    script(href='/js/bootstrap.min.js')
    script(href='/js/jquery-3.2.1.min.js')
    script(href='/js/ajax.js')
  body    
    link(rel='stylesheet' href='/css/login.css')
    div(class="container")
        div(class="row")
            div(class="col-md-12")
                div(class="wrap")
                    p(class="form-title") Login
                    form(class="login" method='post' action='/')
                        input(type="text" name='email' placeholder="Email" required)
                        input(type="password" name='senha' placeholder="Senha" required)
                        input(type="submit" value="Enviar" class="btn btn-success btn-sm")
                        if messages.erro
                            div(class="alert alert-danger")
                                each msg in messages.erro
                                    b= msg
        div(class="posted-by") Desenvolvido Por: 
            a(href="http://www.jquery2dotnet.com") Caio Chaves
